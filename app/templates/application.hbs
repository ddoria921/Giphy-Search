<GiphyProvider as |gifs| >
  <ul>
    {{#if gifs.loading}}
      <h2>Loading...</h2>
    {{/if}}

    {{#each gifs.results as |gif|}}
      <li>
        <img
          src={{gif.url}}
          width={{gif.width}}
          height={{gif.height}}
          alt={{gif.title}}
        >
      </li>
    {{/each}}
  </ul>
</GiphyProvider>
